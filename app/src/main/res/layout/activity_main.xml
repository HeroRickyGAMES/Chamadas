<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonPresenca"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_baseline_check_24"
        android:onClick="Btnpresenca1"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPresenca1"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_baseline_check_24"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/buttonPresenca" />

    <TextView
        android:id="@+id/nomesStactText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/StatctextFaltas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faltas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPresenças"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Presenças"
        app:layout_constraintEnd_toStartOf="@+id/StatctextFaltas"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textAluno2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Aluno 2"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAluno" />

    <TextView
        android:id="@+id/textAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:text="Aluno 1"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomesStactText" />

    <Button
        android:id="@+id/buttonFalta"
        android:layout_width="41dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_baseline_close_24"
        android:onClick="faltasbtn1"
        app:layout_constraintStart_toEndOf="@+id/buttonPresenca"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonFalta1"
        android:layout_width="41dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_baseline_close_24"
        app:layout_constraintStart_toEndOf="@+id/buttonPresenca1"
        app:layout_constraintTop_toBottomOf="@+id/buttonFalta" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.46" />

    <EditText
        android:id="@+id/textPresenca"
        android:layout_width="37dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/buttonFalta"
        app:layout_constraintTop_toBottomOf="@+id/textPresenças" />

    <EditText
        android:id="@+id/textPresenca2"
        android:layout_width="37dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/buttonFalta1"
        app:layout_constraintTop_toBottomOf="@+id/textPresenca" />

    <EditText
        android:id="@+id/textFaltas"
        android:layout_width="37dp"
        android:layout_height="31dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textPresenca"
        app:layout_constraintTop_toBottomOf="@+id/StatctextFaltas" />

    <EditText
        android:id="@+id/textFaltas2"
        android:layout_width="37dp"
        android:layout_height="31dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textPresenca2"
        app:layout_constraintTop_toBottomOf="@+id/textFaltas" />

</androidx.constraintlayout.widget.ConstraintLayout>